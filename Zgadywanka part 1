<div>
  <h2>Zgadywanie Liczby ğŸ²</h2>
  <p>Komputer wybraÅ‚ liczbÄ™ od 1 do 100. SprÃ³buj zgadnÄ…Ä‡!</p>

  <!-- Pole do wpisywania liczby -->
  <input type="number" id="guessInput" min="1" max="100" />

  <!-- Przycisk do sprawdzenia zgadywanej liczby -->
  <button id="guessBtn">Zgaduj</button>

  <!-- Przycisk do resetowania gry -->
  <button id="resetBtn">Resetuj</button>

  <!-- Miejsce do wyÅ›wietlania komunikatÃ³w (np. podpowiedzi) -->
  <div id="message"></div>
</div>

<script>
  (function() {
    // Pobieramy elementy z DOM
    const guessInput = document.getElementById('guessInput');  // Pole input
    const guessBtn = document.getElementById('guessBtn');      // Przycisk "Zgaduj"
    const resetBtn = document.getElementById('resetBtn');      // Przycisk "Resetuj"
    const message = document.getElementById('message');        // Div z komunikatami

    let secretNumber; // Przechowuje wylosowanÄ… liczbÄ™
    let attempts;     // Liczba prÃ³b uÅ¼ytkownika

    // Funkcja rozpoczynajÄ…ca nowÄ… grÄ™
    function startGame() {
      // Losujemy liczbÄ™ od 1 do 100
      secretNumber = Math.floor(Math.random() * 100) + 1;
      attempts = 0;             // Zerujemy licznik prÃ³b
      message.textContent = ''; // Czyscimy komunikaty
      guessInput.value = '';    // Czyscimy pole input
      guessInput.disabled = false; // WÅ‚Ä…czamy pole input
      guessBtn.disabled = false;   // WÅ‚Ä…czamy przycisk zgadywania
      guessInput.focus();           // Ustawiamy fokus na pole input
    }

    // Funkcja sprawdzajÄ…ca zgadywanÄ… liczbÄ™
    function checkGuess() {
      const guess = Number(guessInput.value); // Pobieramy i zamieniamy na liczbÄ™

      // Sprawdzamy, czy liczba jest w zakresie 1-100
      if (!guess || guess < 1 || guess > 100) {
        message.textContent = 'â— Podaj liczbÄ™ od 1 do 100!';
        return; // KoÅ„czymy funkcjÄ™, jeÅ›li warunek nie jest speÅ‚niony
      }

      attempts++; // ZwiÄ™kszamy licznik prÃ³b

      if (guess === secretNumber) {
        // Trafiona liczba!
        message.textContent = `ğŸ‰ Brawo! ZgadÅ‚eÅ› liczbÄ™ w ${attempts} prÃ³bach!`;

        // WyÅ‚Ä…czamy pole i przycisk, bo gra siÄ™ skoÅ„czyÅ‚a
        guessInput.disabled = true;
        guessBtn.disabled = true;
      } else if (guess < secretNumber) {
        // Podpowiadamy, Å¼e liczba jest za maÅ‚a
        message.textContent = 'ğŸ”¼ Za maÅ‚o, sprÃ³buj wiÄ™kszÄ… liczbÄ™.';
      } else {
        // Podpowiadamy, Å¼e liczba jest za duÅ¼a
        message.textContent = 'ğŸ”½ Za duÅ¼o, sprÃ³buj mniejszÄ… liczbÄ™.';
      }

      guessInput.value = ''; // CzyÅ›cimy pole po kaÅ¼dej prÃ³bie
      guessInput.focus();    // Ustawiamy fokus z powrotem na input
    }

    // ObsÅ‚uga klikniÄ™cia przycisku "Zgaduj"
    guessBtn.addEventListener('click', checkGuess);

    // ObsÅ‚uga wciÅ›niÄ™cia klawisza Enter w polu input
    guessInput.addEventListener('keydown', e => {
      if (e.key === 'Enter') {
        checkGuess();
      }
    });

    // ObsÅ‚uga przycisku "Resetuj" - zaczynamy nowÄ… grÄ™
    resetBtn.addEventListener('click', startGame);

    // Startujemy grÄ™ przy zaÅ‚adowaniu skryptu
    startGame();
  })();
</script>
